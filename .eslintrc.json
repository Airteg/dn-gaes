{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": ["react", "prettier", "@emotion", "markdown"],
  "overrides": [
    {
      "files": ["*.md"],
      "plugins": ["markdown"],
      "rules": {
        "prettier/prettier": "off",
        "no-unused-vars": "off",
        "no-undef": "off",
        "no-trailing-spaces": "off"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "all",
        "singleQuote": false,
        "semi": true,
        "endOfLine": "auto"
      }
    ],
    "@emotion/jsx-import": "error",
    "@emotion/pkg-renaming": "error",
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
